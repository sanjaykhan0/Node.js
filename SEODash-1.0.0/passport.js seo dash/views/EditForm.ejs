<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SeoDash Free Bootstrap Admin Template by Adminmart</title>
  <link rel="shortcut icon" type="image/png" href="../assets/images/logos/seodashlogo.png" />
  <link rel="stylesheet" href="../../node_modules/simplebar/dist/simplebar.min.css">
  <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>

<body>
 
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
   
   <%-include("aside")%>
   
   
    <div class="body-wrapper">
     
      <%-include("header")%>
     
      
      <form class="form-horizontal" action="/updateData" method="post" enctype="multipart/form-data" style="max-width: 600px; margin: 20px auto; font-family: Arial, sans-serif; background-color: #f9f9f9; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
        <div class="card-body" style="padding: 20px;">
            <h4 class="card-title" style="text-align: center; margin-bottom: 20px; color: #333;">Personal Info</h4>
          
            <div class="form-group row" style="margin-bottom: 15px;">
                <!-- <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="font-weight: bold;">First Name</label> -->
                <div class="col-sm-9">
                  <input type="text" name="id" value="<%=data.id%>" hidden class="form-control" id="fname" placeholder="First Name Here" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                </div>
            </div>
            <div class="form-group row" style="margin-bottom: 15px;">
                <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="font-weight: bold;">First Name</label>
                <div class="col-sm-9">
                  <input type="text" name="fname" value="<%=data.fname%>" class="form-control" id="fname" placeholder="First Name Here" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                </div>
            </div>
        
            <div class="form-group row" style="margin-bottom: 15px;">
                <label for="lname" class="col-sm-3 text-right control-label col-form-label" style="font-weight: bold;">Last Name</label>
                <div class="col-sm-9">
                    <input type="text" name="lname" value="<%=data.lname%>" class="form-control" id="lname" placeholder="Last Name Here" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                </div>
            </div>
           
            <div class="form-group row" style="margin-bottom: 15px;">
                <label for="email" class="col-sm-3 text-right control-label col-form-label" style="font-weight: bold;">Email</label>
                <div class="col-sm-9">
                    <input type="email" name="email" value="<%=data.email%>" class="form-control" id="email" placeholder="Email" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                </div>
            </div>
           
            <div class="form-group row" style="margin-bottom: 15px;">
                <label for="password" class="col-sm-3 text-right control-label col-form-label" style="font-weight: bold;">Password</label>
                <div class="col-sm-9">
                    <input type="password" name="password" value="<%=data.password%>" class="form-control" id="password" placeholder="Password Here" autocomplete="new-password" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                </div>
            </div>
           
            <div class="form-group row" style="margin-bottom: 15px;">
                <label class="col-sm-3 text-right control-label col-form-label" style="font-weight: bold;">Gender</label>
                <div class="col-sm-9">
                    <input type="radio" name="gender" value="male" <%=data.gender=="male"?"checked":""%>  id="gender-male" required>
                    <label for="gender-male" style="margin-right: 15px;">Male</label>
                    <input type="radio" name="gender" value="female" id="gender-female" <%=data.gender=="female"?"checked":""%> required>
                    <label for="gender-female">Female</label>
                </div>
            </div>
           
            <div class="form-group row" style="margin-bottom: 15px;">
                <label class="col-sm-3 text-right control-label col-form-label" style="font-weight: bold;">Language</label>
                <div class="col-sm-9">
                    <input type="checkbox" name="language" value="english" <%=data.language.includes('english')?"checked":""%> id="language-english">
                    <label for="language-english" style="margin-right: 10px;" >English</label>
                    <input type="checkbox" name="language" value="hindi"  <%=data.language.includes('hindi')?"checked":""%> id="language-hindi">
                    <label for="language-hindi" style="margin-right: 10px;">Hindi</label>
                    <input type="checkbox" name="language" value="gujarati" <%=data.language.includes('gujarati')?"checked":""%> id="language-gujarati">
                    <label for="language-gujarati">Gujarati</label>
                </div>
            </div>
           
            <div class="form-group row" style="margin-bottom: 15px;">
                <label for="country" class="col-sm-3 text-right control-label col-form-label" style="font-weight: bold;">Country</label>
                <div class="col-sm-9">
                  <select name="country" id="country" class="form-control" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                    <option value="">Select Country</option>
                    <option value="india" <%= data.country === "india" ? "selected" : "" %>>India</option>
                    <option value="japan" <%= data.country === "japan" ? "selected" : "" %>>Japan</option>
                    <option value="usa" <%= data.country === "usa" ? "selected" : "" %>>USA</option>
                </select>
                </div>
            </div>
          
            <div class="form-group row" style="margin-bottom: 15px;">
                <label for="image" class="col-sm-3 text-right control-label col-form-label" style="font-weight: bold;">File</label>
                <div class="col-sm-9">
                    <input type="file" value="<%=data.image%>" name="image" id="image" class="form-control-file"  style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                    <img src="<%=data.image%>" style="height: max-content;" alt="">
                </div>
            </div>
        </div>
        <div class="border-top" style="border-top: 1px solid #ddd; padding: 15px;">
            <div class="card-body" style="text-align: center;">
                <button type="submit" class="btn btn-primary" style="background-color: #007bff; border: none; padding: 10px 20px; border-radius: 4px; color: #fff; cursor: pointer;">Submit</button>
            </div>
        </div>
    </form>
    


    </div>
  </div>
  <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
  <script src="../assets/js/sidebarmenu.js"></script>
  <script src="../assets/js/app.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>